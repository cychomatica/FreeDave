            "cwd": "${workspaceFolder}"
        },
        {
            "name": "debug trado_chat",
            "type": "debugpy",
            "request": "launch",
            "program": "trado_chat_example.py",
            "console": "integratedTerminal",
            "args": [
                "config=configs/trado_chat.yaml",
                "rollout.remasking_strategy=low_confidence_dynamic",
                "rollout.top_k=0",
                "rollout.draft_steps=4",
                "rollout.fast_sampling_version=NA",
