        },
        {
            "name": "debug dream_chat",
            "type": "debugpy",
            "request": "launch",
            "program": "dream_chat_example.py",
            "console": "integratedTerminal",
            "args": [
                "config=configs/dream_eval.yaml",
                "rollout.draft_steps=4",
                // "rollout.max_gen_length=256",
                // "rollout.steps=256",
                // "rollout.further_horizon=0",
                // "rollout.block_size=4",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "7"
            },
        },
        {
            "name": "debug llada_chat",
            "type": "debugpy",
            "request": "launch",
            "program": "llada_chat_example.py",
            "console": "integratedTerminal",
            "args": [
                "config=configs/llada_eval.yaml",
                "rollout.draft_steps=4",
                // "rollout.max_gen_length=256",
                // "rollout.steps=256",
                "rollout.further_horizon=32",
                "rollout.block_size=32",
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "3"
